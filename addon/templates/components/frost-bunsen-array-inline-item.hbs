{{#if (and (not compact) showRemoveButton)}}
  <div class="remove-btn-container">
    {{frost-button
      disabled=disabled
      onClick=(action "onRemove")
      priority="tertiary"
      size="medium"
      text="Remove"
    }}
  </div>
{{/if}}
{{#if sortable}}
  {{frost-icon class="handle" icon="menu"}}
{{/if}}
<div class="item-input">
  {{#if itemCell.renderer}}
    {{component customRenderer
      bunsenId=(concat bunsenId '.' index)
      bunsenModel=bunsenModel.items
      bunsenView=bunsenView
      cellConfig=cellConfig
      changeSet=changeSet
      formDisabled=formDisabled
      label=label
      onChange=onChange
      readOnly=readOnly
      registerForFormValueChanges=registerForFormValueChanges
      renderers=renderers
      showAllErrors=showAllErrors
      value=value
    }}
  {{else if (eq bunsenModel.items.type "array")}}
    {{frost-bunsen-array-container
      bunsenId=(concat bunsenId '.' index)
      bunsenModel=bunsenModel.items
      bunsenView=bunsenView
      cellConfig=cellConfig
      changeSet=changeSet
      errors=errors
      formDisabled=formDisabled
      label=label
      onChange=onChange
      readOnly=readOnly
      registerForFormValueChanges=registerForFormValueChanges
      renderers=renderers
      showAllErrors=showAllErrors
      value=value
    }}
  {{else if (eq bunsenModel.items.type "object")}}
    {{frost-bunsen-cell
      bunsenId=(concat bunsenId '.' index)
      bunsenModel=bunsenModel.items
      bunsenView=bunsenView
      cellConfig=itemCell
      changeSet=changeSet
      errors=errors
      formDisabled=formDisabled
      label=label
      onChange=onChange
      readOnly=readOnly
      registerForFormValueChanges=registerForFormValueChanges
      renderers=renderers
      showAllErrors=showAllErrors
      value=value
    }}
  {{else}}
    {{frost-bunsen-input-wrapper
      bunsenId=(concat bunsenId '.' index)
      bunsenModel=bunsenModel.items
      bunsenView=bunsenView
      cellConfig=itemCell
      changeSet=changeSet
      errorMessage=errorMessage
      formDisabled=formDisabled
      label=label
      onChange=onChange
      readOnly=readOnly
      registerForFormValueChanges=registerForFormValueChanges
      renderers=renderers
      showAllErrors=showAllErrors
      value=renderValue
    }}
  {{/if}}
</div>
{{#if (and compact showRemoveButton)}}
  <div class="remove-btn-container">
    {{frost-button
      disabled=disabled
      onClick=(action "onRemove")
      priority="tertiary"
      size="medium"
      text="Remove"
    }}
  </div>
{{/if}}

Model:
{{frost-select
  data=modelOptions
  hook='modelSelect'
  selectedValue=selectedModelId
  onChange=onSelectModel
}}

View:
{{frost-select
  data=viewOptions
  disabled=viewSelectionDisabled
  hook='viewSelect'
  selectedValue=selectedViewId
  onChange=onSelectView
}}

{{#if onSelectValue}}
  Value:
  {{frost-select
    data=valueOptions
    disabled=valueSelectionDisabled
    hook='valueSelect'
    selectedValue=selectedValueId
    onChange=onSelectValue
  }}
{{/if}}

{{#if selectedModel}}
  {{yield}}
{{/if}}
